{% extends 'base.html.j2' %}

{% block title %}
Lookup a Pokemon!
{% endblock %}

{% block content %}
    <h1>Enter the name of a Pokemon:</h1>
    <form method="POST" action="/pokemon">
    <div class="mb-3">
        <label for="pokemon" class="form-label">Pokemon Name</label>
        <input type="text" name="pokemon" class="form-control" id="poke">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {% if pokemon_stats %}
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Pokemon Name</th>
            <th scope="col">HP Base</th>
            <th scope="col">Defense Base</th>
            <th scope="col">Attack Base</th>
            <th scope="col">Picture Link</th>
            
            </tr> 
        </thead>
        <tbody>
            
                <tr>
                    <th scope="row">{{pokemon_stats['poke_name'].title()}}</th>
                    <td>{{pokemon_stats['hp_base']}}</td>
                    <td>{{pokemon_stats['attack_base']}}</td>
                    <td>{{pokemon_stats['defense_base']}}</td>    
                    <td>{{pokemon_stats['front_shiny_sprite']}}</td>
                    
                </tr>
            
        </tbody>
        </table>
        <img src="{{pokemon_stats['front_shiny_sprite']}}" class="img-fluid" alt="shiny">    {% else %}
    Type the name of the Pokemon you want to know about.
    {% endif %}


{% endblock %}